                    <TextBlock Grid.Column="1" Grid.Row="2" TextWrapping="Wrap" Margin="16 0 16 8"
                               VerticalAlignment="Center" FontWeight="Bold">
                        <TextBlock.Inlines>
                            <Run Text="Recommended Setting:" />
                            <Run Foreground="#1BBA3C" Text="On" />
                        </TextBlock.Inlines>
                    </TextBlock>
                    <Border Grid.Column="1" Grid.Row="3" BorderThickness="0 1 0 0"
                            BorderBrush="{DynamicResource MaterialDesignDivider}">
                        <Grid Margin="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Button Style="{DynamicResource MaterialDesignFlatButton}" Grid.Column="0"
