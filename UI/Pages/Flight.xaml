                        <TextBlock.Inlines>
                            <Run Text="Enables or disables the flight mesh system for" />
                            <Run FontStyle="Italic" Text="The Sea of Clouds." />
                        </TextBlock.Inlines>
                    </TextBlock>
                    <TextBlock Grid.Column="1" Grid.Row="2" TextWrapping="Wrap" Margin="16 0 16 8"
