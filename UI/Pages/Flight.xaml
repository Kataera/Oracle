                        </Grid>
                    </Border>
                </Grid>
            </materialDesign:Card>
            <materialDesign:Card Width="420" Margin="4,2,4,8" Height="270">
                <Grid VerticalAlignment="Stretch">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Image Source="/Oracle;component/Resources/Images/Flight/DravanianHinterlands.png" Grid.RowSpan="5"
                           StretchDirection="Both" VerticalAlignment="Stretch" Stretch="UniformToFill"
                           RenderOptions.BitmapScalingMode="HighQuality" />
                    <TextBlock Grid.Column="1" TextWrapping="Wrap"
                               Style="{StaticResource MaterialDesignHeadlineTextBlock}"
                               Margin="16 16 16 2">
                        The Dravanian Hinterlands
                    </TextBlock>
                    <TextBlock Grid.Column="1" Grid.Row="1" TextWrapping="Wrap" Margin="16 0 16 8"
                               Foreground="{DynamicResource MaterialDesignBodyLight}"
                               VerticalAlignment="Center">
                        <TextBlock.Inlines>
                            <Run Text="Enables or disables the flight mesh system for" />
                            <Run FontStyle="Italic" Text="The Dravanian Hinterlands." />
                        </TextBlock.Inlines>
