                        </TextBlock.Inlines>
                    </TextBlock>
                    <Border Grid.Column="1" Grid.Row="3" BorderThickness="0 1 0 0"
                            BorderBrush="{DynamicResource MaterialDesignDivider}">
                        <Grid Margin="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Button Style="{DynamicResource MaterialDesignFlatButton}" Grid.Column="0"
                                    x:Name="AzysLlaDefaultButton" Click="AzysLlaDefaultButton_Click"
