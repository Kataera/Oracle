                        <TextBlock.Inlines>
                            <Run Text="Recommended Setting:" />
                            <Run Foreground="#1BBA3C" Text="On" />
                        </TextBlock.Inlines>
                    </TextBlock>
                    <Border Grid.Column="1" Grid.Row="3" BorderThickness="0 1 0 0"
                            BorderBrush="{DynamicResource MaterialDesignDivider}">
                        <Grid Margin="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Button Style="{DynamicResource MaterialDesignFlatButton}" Grid.Column="0"
                                    x:Name="SeaOfCloudsDefaultButton" Click="SeaOfCloudsDefaultButton_Click"
                                    HorizontalAlignment="Left">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="BackupRestore" VerticalAlignment="Center" />
                                    <TextBlock Margin="8 0 0 0" VerticalAlignment="Center">Default</TextBlock>
                                </StackPanel>
                            </Button>
                            <ToggleButton Grid.Column="1" Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                          VerticalAlignment="Center" x:Name="SeaOfCloudsSetting"
                                          Click="SeaOfCloudsSetting_OnClick" />
                        </Grid>
                    </Border>
                </Grid>
            </materialDesign:Card>
            <materialDesign:Card Width="420" Margin="4,2,4,8" Height="270">
