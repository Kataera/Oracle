                        <Grid Margin="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Button Style="{DynamicResource MaterialDesignFlatButton}" Grid.Column="0"
                                    x:Name="DravanianForelandsDefaultButton"
                                    Click="DravanianForelandsDefaultButton_Click" HorizontalAlignment="Left">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="BackupRestore" VerticalAlignment="Center" />
                                    <TextBlock Margin="8 0 0 0" VerticalAlignment="Center">Default</TextBlock>
                                </StackPanel>
                            </Button>
                            <ToggleButton Grid.Column="1" Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                          VerticalAlignment="Center" x:Name="DravanianForelandsSetting"
                                          Click="DravanianForelandsSetting_OnClick" />
                        </Grid>
                    </Border>
                </Grid>
            </materialDesign:Card>
            <materialDesign:Card Width="420" Margin="4,2,4,8" Height="270">
                <Grid VerticalAlignment="Stretch">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Image Source="/Oracle;component/Resources/Images/Flight/ChurningMists.png" Grid.RowSpan="5"
                           StretchDirection="Both" VerticalAlignment="Stretch" Stretch="UniformToFill"
                           RenderOptions.BitmapScalingMode="HighQuality" />
                    <TextBlock Grid.Column="1" TextWrapping="Wrap"
                               Style="{StaticResource MaterialDesignHeadlineTextBlock}"
                               Margin="16 16 16 2">
                        The Churning Mists
                    </TextBlock>
                    <TextBlock Grid.Column="1" Grid.Row="1" TextWrapping="Wrap" Margin="16 0 16 8"
