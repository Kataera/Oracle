                <Image Grid.Column="1" Grid.Row="0" Source="/Oracle;component/Resources/Images/Azys Lla.png" Grid.RowSpan="5" StretchDirection="Both" VerticalAlignment="Stretch" Stretch="UniformToFill" />
            </Grid>
